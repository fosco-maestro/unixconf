#!/bin/sh

options="grp:toggle,ctrl:swapcaps"
#options="grp:toggle"

[ $# -eq 0 ] && {
	echo "setting default keymap"
	setxkbmap -layout "us,ru(winkeys)" -option $options
} || {
	[ $1 = "ua" ] && {
		echo "setting ukrainian keymap"
		setxkbmap -layout "us,ru(winkeys),ua(winkeys)" -option $options
	}
}

xmodmap ~/.Xmodmap
