fontname "fixed:pixelsize=15:bold"
#fontname "terminus:pixelsize=14:bold"

command term "xterm"
#command term "urxvt"

#bind	MS-Return	terminal
bind	C-Up		terminal
#bind C-Down	/usr/local/bin/rxvt

borderwidth 2

sticky yes
moveamount 5

autogroup 7		"Firefox"
autogroup 7		"Navigator"
autogroup 7		"Namoroka"
autogroup 7		"Minefield"

bind	MS-1		grouponly1
bind	MS-2		grouponly2
bind	MS-3		grouponly3
bind	MS-4		grouponly4
bind	MS-q		grouponly5
bind	MS-w		grouponly6
bind	MS-e		grouponly7
bind	MS-r		grouponly8

bind	CS-1		movetogroup1
bind	CS-2		movetogroup2
bind	CS-3		movetogroup3
bind	CS-4		movetogroup4
bind	CS-q		movetogroup5
bind	CS-w		movetogroup6
bind	CS-e		movetogroup7
bind	CS-r		movetogroup8

bind	CM-Left		cyclegroup
bind	CM-Right	rcyclegroup

bind	M-Left		unmap
bind	M-Right		unmap
bind	M-.		unmap
bind	C-/		unmap
bind	M-Return	unmap
bind	M-Escape	hide

bind	MS-f	maximize
#bind	CMS-=	hmaximize
#bind	CM-=	vmaximize

bind	CMS-x	reload
bind	CMS-q	unmap
