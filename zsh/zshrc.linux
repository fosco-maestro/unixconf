_alias	ls		ls --color=auto
_alias	mmesg		tail -f /var/log/messages

_alias	pacman		sudo pacman
_alias	ip		sudo ip
_alias	iw		sudo iw
_alias	gmake		make
_alias	rc.d		sudo rc.d

_alias	ifconfig	ip addr

umount() {
	umount=/bin/umount
	[ $1 = "." ] && {
		opwd=$PWD
		cd ..
		sudo $umount $opwd
	} || {
		sudo $umount $*
	}
}

export CVS_RSH=ssh

